

<div class="container mt-5">
<h2> Edit Article </h2>
<div class="row">
    <div class="col-md-5">
        <%= form_with(model: @article, local: true) do |f| %>
            <p>
                <%= f.label :title %> <br />
                <%= f.text_field :title, :class => 'form-control' %>
            </p>
        
            <p>
                <%= f.label :description %> <br />
                <%= f.text_area :description, :class => 'form-control' %>
            </p>
        
            <p>
                <%= f.submit "Update Article", :class => 'btn btn-success' %>
            </p>
            
        <% end %>
    </div>
</div>
<div class="row">
    <div class="col-md-5">
        <hr />
        <div style="float: right;">
            <%= link_to 'Article Listing', articles_path, :class=> 'btn btn-primary' %>
        </div>
    </div>
</div>
</div>