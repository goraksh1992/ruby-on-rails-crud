<div class="container mt-3">
    <div class="row">
        <div class="col-md-12">
            <h2> ARTICLE LISTING </h2>
            <hr>
        </div>
    </div>
    <br>
    <div class="row">
        <% @articles.each do |article| %>
            <div class="col-md-3">
                <div class="card">
                    <img src="https://complianz.io/wp-content/uploads/2019/03/placeholder-300x202.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= article.title %></h5>
                        <p class="card-text">
                            <%= article.description %>
                        </p>
                        
                        <div class="border-top pt-2">
                            <%= link_to 'View', article_path(article), :class=>'btn btn-success'  %>
                            <%= link_to 'Edit', edit_article_path(article), :class=>'btn btn-warning'  %>
                            <%= link_to "Delete", article_path(article), class: "btn btn-danger", 
                            method: :delete, data: {confirm: "Are you sure?"} %>
                        </div>
                    </div>
                    <div class="card-footer">
                        <small>Created <%= time_ago_in_words(article.created_at) %> ago, Updated <%= time_ago_in_words(article.updated_at) %> ago</small>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>