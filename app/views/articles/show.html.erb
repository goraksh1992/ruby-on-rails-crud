<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="https://complianz.io/wp-content/uploads/2019/03/placeholder-300x202.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= @article.title %></h5>
                    <p class="card-text">
                        <%= @article.description %>
                    </p>
                    
                </div>
                <div class="modal-footer" style="float: right;">
                    <%= link_to 'Edit', edit_article_path(@article), :class=>'btn btn-warning'  %>
                    <%= link_to "Delete", article_path(@article), class: "btn btn-danger", 
                    method: :delete, data: {confirm: "Are you sure?"} %>
                </div>
            </div>
        </div>
    </div>
</div>